<h2>Lista de categorias :</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
<div class="card mt-4 mb-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small><br>
        <small>{{date}}</small><br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
        <form action="/admin/categorias/deletar/{{_id}}" method="POST">
            <input type="hidden" name="" id="" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
        </form>
    </div>
</div>


{{else}}

{{/each}}